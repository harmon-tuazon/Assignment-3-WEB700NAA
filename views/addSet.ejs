<!DOCTYPE html>
<html>

<head>
	<title>Lego Collection</title>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/theme.css">
</head>

<body>
	<%- include('partials/navbar', {page: '/addSet'}) %>

	<br />

	<div class="container bg-dark">
		<div class="row">
			<main class="bg-light col-md-12">

             <div class="card bg-base-200 p-4 mx-auto" style="max-width: 50vw;">

                <form method="post" action="/lego/addSet">
                    <div class="mb-3">
                        <label class="form-label" for="name">
                            <span class="label-text">Name</span>
                        </label>
                        <input type="text" name="name" id="name" placeholder="Type here" class="input input-bordered form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="year">
                            <span class="label-text">Year</span>
                        </label>
                        <input type="number" name="year" id="year" placeholder="2025" class="input input-bordered form-control" required />
                    </div>
                     <div class="mb-3" for="num_parts">
                        <label class="form-label">
                            <span class="label-text">Num_Parts</span>
                        </label>
                        <input type="number" name="num_parts" id="num_parts" placeholder="Type Here" class="input input-bordered form-control" required />
                    </div>
                    <div class="mb-3" for="img_url">
                        <label class="form-label">
                            <span class="label-text">Img_Url</span>
                        </label>
                        <input type="url" name="img_url" id="img_url" placeholder="Place Url" class="input input-bordered form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="theme_id">
                            <span class="label-text">Theme_Id</span>
                        </label>
                        <select name="theme_id" id="theme_id" class="select select-bordered w-full form-control" required>
                            <% themes.forEach(theme=>{ %>
                                <option value="<%= theme.id %>">
                                    <%= theme.name %>
                                </option>
                            <% }) %> 
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="set_num">
                            <span class="label-text">Set_Num</span>
                        </label>
                        <input type="text" name="set_num" id="set_num" placeholder="Type here" class="input input-bordered form-control" required />
                    </div>
                    <div class="form-control mt-6">
                        <button class="btn btn-success">Submit</button>
                     </div>
                </form>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">


			</main>
		</div>
	</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>