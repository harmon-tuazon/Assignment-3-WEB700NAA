<!DOCTYPE html>
<html>

<head>
    <title>Lego Collection</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/theme.css">
	<script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch("https://dummyjson.com/quotes/random")
                .then(response => response.json())
                .then(data => {
                    document.getElementById("quote").innerHTML = `"${data.quote}" â€” ${data.author}`;
                })
                .catch(err => {
                    console.error("Quote fetch failed:", err);
                    document.getElementById("quote").innerHTML = "Could not load quote.";
                });
        });
    </script>

</head>

<body>
    <%- include('partials/navbar', {page: ''}) %>

    <br />

    <div class="container">
        <div class="row">
            <main class="col-md-12">

                <section class="bg-light text-center py-5">
                    <div class="container">
                        <h1 class="display-5 fw-bold"><%= set.name %></h1>
                        <p class="lead text-muted">
                            Below, you will find detailed information about the set: <strong><%= set.name %></strong>
                        </p>
                        <img src="<%= set.img_url %>" alt="<%= set.name %>" class="img-fluid my-4" style="max-height: 300px;">
                        
                        <ul class="list-group mb-4">
                            <li class="list-group-item"><strong>Set Name:</strong> <%= set.name %></li>
                            <li class="list-group-item"><strong>Year Released:</strong> <%= set.year %></li>
                            <li class="list-group-item"><strong>Theme:</strong> <%= set.Theme.name %></li>
                            <li class="list-group-item"><strong>Number of Parts:</strong> <%= set.num_parts %></li>
                        </ul>

                        <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-danger me-2">Delete This Set</a>
                        <a href="#" onclick="history.back(); return false;" class="btn btn-secondary">Go Back</a>
						<span id="quote"></span> 
                    </div>
                </section>

            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js">
    </script>
</body>

</html>
